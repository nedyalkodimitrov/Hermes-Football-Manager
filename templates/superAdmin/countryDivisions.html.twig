{% extends 'superAdmin/base.html.twig' %}
{% block body %}
    <div class="col-12 row justify-content-center m-0">
        <div class="col-11 row  justify-content-center ">
            {% for country in countries %}
                <div class="col-lg-4 col-sm-11 row m-0 ">
                    <div class="col-lg-12  col-sm-9 col-md-6 country-container text-center mt-3 mx-auto">
                        <a href="{{ path("superAdminDivisions", {id: country.Id}) }}">
                            <img src="{{asset("images/" ~ country.Images)}}" alt="" class="country-img mt-4">
                            <h1 class="country-text mt-1 ml-3 align-bottom  text-left mb-2">{{ country.Name }}</h1>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}